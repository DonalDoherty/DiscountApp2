<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/post_thumb_row"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:contentDescription="@string/thumbnail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/post_title_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/post_expiryText_row"
        app:layout_constraintStart_toStartOf="@+id/post_thumb_row"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/post_prevPrice_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/previous_price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/post_prevPriceText_row"
        app:layout_constraintStart_toStartOf="@+id/post_prevPriceText_row"
        app:layout_constraintTop_toBottomOf="@+id/post_prevPriceText_row" />

    <TextView
        android:id="@+id/post_prevPriceText_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous_price"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/post_thumb_row"
        app:layout_constraintTop_toBottomOf="@+id/post_title_row" />

    <TextView
        android:id="@+id/post_currentPrice_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/post_currentPriceText_row"
        app:layout_constraintStart_toStartOf="@+id/post_currentPriceText_row"
        app:layout_constraintTop_toBottomOf="@+id/post_currentPriceText_row" />

    <TextView
        android:id="@+id/post_expiry_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expiry_date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/post_expiryText_row"
        app:layout_constraintStart_toStartOf="@+id/post_expiryText_row"
        app:layout_constraintTop_toBottomOf="@+id/post_expiryText_row" />

    <TextView
        android:id="@+id/post_expiryText_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/expiry_date"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/post_currentPriceText_row"
        app:layout_constraintTop_toBottomOf="@+id/post_title_row" />

    <TextView
        android:id="@+id/post_currentPriceText_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/current_price"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/post_prevPriceText_row"
        app:layout_constraintTop_toBottomOf="@+id/post_title_row" />

</androidx.constraintlayout.widget.ConstraintLayout>